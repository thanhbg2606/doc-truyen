version: "3.9"
  services:
    app:
      build: .
      environment:
        DB_USER_NAME: root
        DB_PASSWORD: password
        DB_HOST_NAME: db
      ports:
        - 3000:3000
      stdin_open: true
      tty: true
    db:
      image: mysql:8.0-alpine
      environment:
      MYSQL_ROOT_PASSWORD: password
      ports:
        - '3306:3306'
      command: --default-authentication-plugin=mysql_native_password
      volumes:
        - mysql-data:/var/lib/mysql
